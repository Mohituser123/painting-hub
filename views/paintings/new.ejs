<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Add a New Painting</h3>

    <form
      method="POST"
      action="/paintings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="painting[title]"
          type="text"
          placeholder="Enter title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>

      <div class="mb-3">
        <label for="artist" class="form-label">Artist</label>
        <input
          name="painting[artist]"
          type="text"
          placeholder="Enter artist name"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the artist name.</div>
      </div>

      <div class="mb-3">
        <label for="genre" class="form-label">Genre</label>
        <input
          name="painting[genre]"
          type="text"
          placeholder="e.g. Abstract, Landscape"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the genre.</div>
      </div>

      <div class="mb-3">
        <label for="medium" class="form-label">Medium</label>
        <input
          name="painting[medium]"
          type="text"
          placeholder="e.g. Oil on Canvas"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the medium.</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¹)</label>
        <input
          name="painting[price]"
          type="number"
          placeholder="Enter price"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid price.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="painting[description]"
          rows="4"
          placeholder="Describe this painting..."
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          name="image"
          type="file"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please upload an image.</div>
      </div>

      <button class="btn btn-dark add-btn mt-3">Add Painting</button>
    </form>
  </div>
</div>
