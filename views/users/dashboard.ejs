<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="text-center mb-4">👤 <%= user.username %>'s Dashboard</h2>

  <!-- Uploaded Paintings -->
  <section class="mb-5">
    <h4>🎨 Your Uploaded Paintings</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if (userPaintings.length === 0) { %>
        <p class="text-muted ps-3">You haven't uploaded any paintings yet.</p>
      <% } %>
      <% for (let painting of userPaintings) { %>
        <div class="col">
          <div class="card listing-card h-100 shadow-sm">
            <a href="/paintings/<%= painting._id %>">
              <img src="<%= painting.image.url %>" class="card-img-top" alt="uploaded painting" />
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= painting.title %></h5>
              <p class="card-text">&#8377;<%= painting.price?.toLocaleString("en-IN") %></p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Favorite Paintings -->
  <section class="mb-5">
    <h4>💖 Your Favorite Paintings</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if (user.favorites.length === 0) { %>
        <p class="text-muted ps-3">You haven't favorited any paintings yet.</p>
      <% } %>
      <% for (let fav of user.favorites) { %>
        <div class="col">
          <div class="card listing-card h-100 shadow-sm">
            <a href="/paintings/<%= fav._id %>">
              <img src="<%= fav.image.url %>" class="card-img-top" alt="favorite painting" />
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= fav.title %></h5>
              <p class="card-text">&#8377;<%= fav.price?.toLocaleString("en-IN") %></p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>
</div>
