<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <h2 class="text-center mb-4"><%= user.username %>'s Profile</h2>

  <div class="text-center mb-4">
    <p><strong>Email:</strong> <%= user.email %></p>
    <a href="/users/<%= user._id %>/favorites" class="btn btn-outline-primary btn-sm">View Favorites</a>
  </div>

  <h4 class="fw-bold">My Uploaded Paintings</h4>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
    <% if (paintings.length === 0) { %>
      <div class="text-muted">No paintings uploaded yet.</div>
    <% } else { %>
      <% for (let painting of paintings) { %>
        <div class="col">
          <a href="/paintings/<%= painting._id %>" class="listing-link">
            <div class="card listing-card h-100">
              <img src="<%= painting.image.url %>" class="card-img-top" alt="painting image" />
              <div class="card-body">
                <h5 class="card-title"><%= painting.title %></h5>
                <p class="card-text">&#8377;<%= painting.price?.toLocaleString("en-IN") %></p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    <% } %>
  </div>
</div>
