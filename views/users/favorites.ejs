<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <h2 class="text-center mb-4"><%= user.username %>'s Favorites</h2>

  <% if (user.favorites.length === 0) { %>
    <p class="text-muted text-center">You haven't added any favorites yet.</p>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for (let painting of user.favorites) { %>
        <div class="col">
          <a href="/paintings/<%= painting._id %>" class="listing-link">
            <div class="card listing-card h-100">
              <img src="<%= painting.image.url %>" class="card-img-top" alt="painting image" />
              <div class="card-body">
                <h5 class="card-title"><%= painting.title %></h5>
                <p class="card-text">&#8377;<%= painting.price?.toLocaleString("en-IN") %></p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
