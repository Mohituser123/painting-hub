<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4">ðŸ”” Your Notifications</h2>

  <% if (notifications.length === 0) { %>
    <p class="text-muted">You have no notifications yet.</p>
  <% } else { %>
    <ul class="list-group">
      <% notifications.slice().reverse().forEach(notification => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= notification.message %></span>
          <a href="<%= notification.link %>" class="btn btn-sm btn-outline-primary">Go</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
